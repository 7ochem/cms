{% macro externalLinkIcon() %}
    {{ tag('span', {
        'data-icon': 'external',
        'role': 'img',
        'aria-label': 'Opens in a new window'|t('app'),
    }) }}
{% endmacro %}

{% macro externalLink(config) %}
    {% set linkAttributes = {
        href: config.permalink,
        target: '_blank',
        rel: 'noopener',
        html: config.title ~ '<span class="visually-hidden">, </span>' ~ _self.externalLinkIcon()
    } %}
    {{ tag('a', linkAttributes) }}
{% endmacro %}